# question no.11

def is_palindrome_string(s):
    s = s.lower()
    return s == s[::-1]

print(is_palindrome_string("madam"))   # True
print(is_palindrome_string("Level"))   # True
print(is_palindrome_string("hello"))   # False

# question no.12

def factorial(n):
    if n == 0 or n == 1:   
        return 1
    else:
        return n * factorial(n - 1)

factorial(7)
print(factorial(7))

# question no.13


class Car:
    def __init__(self, name, brand, model, year):
        self.name = name
        self.brand = brand
        self.model = model
        self.year = year

    def __str__(self):
        return (
            f"Car owner name is {self.name}\n"
            f"Car brand is {self.brand}\n"
            f"Car model is {self.model}\n"
            f"Year of car is {self.year}"
        )
details = Car(
    "Piyush",
    "Bentley",
    "Bentayga SUV",
    2024
)

print(details)

# question no.14

class Student:
    def __init__(self, name, marks):
        self.name = name
        self.marks = marks

    def calculate_grade(self):
        if self.marks >= 90:
            return "A"
        elif self.marks >= 75:
            return "B"
        elif self.marks >= 60:
            return "C"
        elif self.marks >= 40:
            return "D"
        else:
            return "F"

s1 = Student("Piyush", 88)

print("Name:", s1.name)
print("Marks:", s1.marks)
print("Grade:", s1.calculate_grade())

# question no.15
class Employee:
    def __init__(self, name, salary):
        self.name = name
        self.salary = salary
class Manager(Employee):
    def __init__(self, name, salary, bonus):
        super().__init__(name, salary)   # call Employee constructor
        self.bonus = bonus

    def total_salary(self):
        return self.salary + self.bonus
m1 = Manager("Piyush", 5000000, 1000000)

print("Name:", m1.name)
print("Total Salary:", m1.total_salary())

# question no.16

class Employee:
    def work(self):
        print("Employee is working")

class Manager(Employee):
    def work(self):
        print("Manager is planning and managing the team")
e = Employee()
m = Manager()

e.work()
m.work()
