elif marks>=40 and marks<=59:
    print("Pass")
else :
    print("Fail")

# question no.4

# using for loop:
n = int(input("Ente How much Natural Numbers I tell you: "))
for i in range(1,n+1):
    n += i
    print("Natural Number is: ",i)

# using while loop:
n = int(input("Ente How much Natural Numbers I tell you: "))
i = 1
while i <= n:
    print("Natural Number is: ",i)
    i += 1

# question no.5

def is_prime(n):
    if n <= 1:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True

num = int(input("Enter a number: "))

if is_prime(num):
    print("Prime")
else:
    print("Not Prime")

